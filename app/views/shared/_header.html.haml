%nav.navbar.navbar-default.navbar-fixed-top
  .container
    .navbar-header
      %button(type='button' class='navbar-toggle collapsed' data-toggle='collapse' data-target='#navbar' aria-expanded='false' aria-controls='navbar')
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to root_path, class: 'navbar-brand myself' do
        %i.fa.fa-book.fa-fw
    .collapse.navbar-collapse#navbar
      %ul.nav.navbar-nav
        %li
          = link_to 'Info', '#'
        %li.active
          = link_to 'Register', '#'
        %li
          = link_to 'Sign in', '#'
      %ul.nav.navbar-nav.navbar-right
        %li.dropdown
          = link_to '', { class: 'dropdown-toggle', 'data-toggle' => 'dropdown', 'role' => 'button', 'aria-haspopup' => 'true', 'aria-expanded' => 'true' } do
            Welcome, USER
            %span.caret
          %ul.dropdown-menu
            %li= link_to 'Profile Account'
            %li= link_to 'Edit profile'
            %li.divider(role='separator')
            %li= link_to 'Sign out'



