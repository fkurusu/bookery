.jumbotron
  .row
    .col-md-8.col-md-offset-1
      = bootstrap_form_tag url: 'sign_in', html: { class: 'form-horizontal' } do |f|
        .col-md-offset-3
          %header
            %h2.text-center Sign in
            %hr
          %fieldset
            .row
              .col-md-4
                = f.label :email, 'Email Address', class: 'control-label'
              .col-md-8
                = f.email_field :email, hide_label: true, placeholder: 'Federico de Asis', icon: 'envelope'
            .row
              .col-md-4
                = f.label :password, class: 'control-label'
              .col-md-8
                = f.password_field :password, hide_label: true, placeholder: '********', icon: 'eye-close', help: 'The same password you entered in your registration ðŸ˜œ'
          %fieldset
            .row
              .col-md-offset-4
                = f.submit 'Sign in', class: 'btn btn-success'
                %small= link_to 'Have an account? No? Register', register_path

