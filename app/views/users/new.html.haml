.jumbotron
  .row
    .col-md-8.col-md-offset-1
      = bootstrap_form_for @user, html: { class: 'form-horizontal' } do |f|
        .col-md-offset-3
          %header
            %h2.text-center Registration
            %hr
          %fieldset
            .row
              .col-md-4
                = f.label :name, 'Full Name:', class: 'control-label'
              .col-md-8
                = f.text_field :name, hide_label: true, placeholder: 'Federico de Asis', icon: 'user'
            .row
              .col-md-4
                = f.label :email, 'Email Address:', class: 'control-label'
              .col-md-8
                = f.email_field :email, hide_label: true, placeholder: 'example@example.com', icon: 'envelope'
            .row
              .col-md-4
                = f.label :password, 'Password', class: 'control-label'
              .col-md-8
                = f.password_field :password, hide_label: true, placeholder: '********', icon: 'eye-close', help: 'Must be 8 characters at least.'
          %fieldset
            .row
              .col-md-offset-4
                = f.submit 'Register', class: 'btn btn-primary'
                %small= "or #{link_to 'Sign in', sign_in_path}".html_safe
%hr